generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Notification {
    id          String    @id @default(auto()) @map("_id") @db.ObjectId
    recipientId String
    content     String
    category    String
    readAt      DateTime?
    createdAt   DateTime  @default(now())

    @@index([recipientId])
}
